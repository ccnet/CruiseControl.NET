<!-- AdministerDashboard.vm: Start -->
<style type="text/css">
#adminFrame
{
	width:100%;
}
#adminFrame td
{
	width:50%;
}
fieldset
{
	padding: 5px;
}
fieldset legend
{
	font-weight: bold;
	margin-bottom: 5px;
}
#adminFrame fieldset div
{
	cursor: pointer;
	margin:2px 0;
}
.oddRow
{
	padding:2px;
	background-color: White;
}
.evenRow
{
	padding:2px;
	background-color:#F0F0F0;
}
form
{
	margin:0;
	padding:0;
}
.button
{
	width: 100px;
}
.text
{
	width: 250px;
}
#serverDialog table
{
	width:100%;
}
#packageDialog table
{
	width:100%;
}
#packageDialog table tr td
{
	vertical-align:top;
}
#importPackageDialog table
{
	width:100%;
}
label
{
	font-weight:bold;
}
.Info
{
}
.Verbose
{
    color:#888888;
    font-style:italic;
}
